<% Booking.where(user_id: current_user.id).each do |booking| %>
<br>
  <div class="flex-container">
    <div class="flex item">
      <div class="flex-container2 post-indiv">

        <div class="flex item">
        <%= cl_image_tag(booking.service.photo_url, width: 100, height: 75, crop: :fill, class: "img-radius") %>
        </div>
        <div class="flex item">
          <h4><%= booking.service.user.first_name.capitalize%></h4>
          <small><%= time_ago_in_words(booking.created_at) + ' ago' %></small>
        </div>
        <div class="flex item">
          <%= link_to "Write a Review", new_service_booking_review_path(booking.service, booking), class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

