<div class="container">


  <div class="table-responsive">

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First</th>
          <th scope="col">Email</th>
          <th scope="col">Helpies</th>
        </tr>
      </thead>
      <tbody>

        <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.first_name %></td>
            <td><%= user.email %></td>
            <td><%= user.helpies %> <i class="far fa-hand-paper"></i></td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>


</div>
