  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade active in" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <div class="profile-dash">
        <div class="half left">
          <%= image_tag("https://media.pri.org/s3fs-public/styles/story_main/public/dalai_lama_10_15_2012.jpeg?itok=wvuNtWci", id:"profile-pic") %>
          <span class="name">
            <%= current_user.first_name %>
          </span>
        </div>
        <div class="half right">
          <div class="info">
            <span class="title">About </span>
            <i class="desc">Landing hands since 96'</i>
          </div>
        </div>
      </div>
    </div>

    <div class="tab-pane fade" id="pills-services" role="tabpanel" aria-labelledby="pills-services-tab">
      <div class="cards">
        <div class="row half-left">
          <% @services.each do |service| %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= link_to service_path(service) do %>
            <div class="service-card">
              <%= cl_image_tag(service.photo_url, width: 200, height: 150, crop: :fill, class: "card-img") %>
              <div class="card-category"><%= service.category.name %></div>
              <div class="card-description"><%= service.description.truncate_words(10) %></div>
              <div class="card-name"><%= service.name %></div>
              <div class="card-price"><%= service.helpies %> â‚¬</div>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="tab-pane fade" id="pills-bookings" role="tabpanel" aria-labelledby="pills-bookings-tab">
      <%= render 'bookings/index' %>
    </div>
  </div>
