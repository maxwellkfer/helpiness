<!-- Button trigger modal <--></-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Choose <%= @service.user_id.name %>'s service</h5>
      </div>
      <div class="modal-body">
        <form action="/services/<%= @ser.id %>/bookings" method= "post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="helpies">
            <label for="guests">NUMBER OF HELPIES</label><br/><br/>
            <h2><%= @service.helpies %> Helpies</h2>
          </div>
          <button type="submit" class="btn-book btn-primary">Request now</button>
        </form>
      </div>
    </div>
  </div>

