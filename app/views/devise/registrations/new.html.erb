<div class="container">
  <br>
  <br>
  <h1>Help you need ?</h1>




<%= simple_form_for(resource, as: resource_name, id: "signup", url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="row">

    <div class="col-xs-12 col-sm-4">
      <%= image_tag "helpster.png", width: 300 %>
    </div>

    <div class="col-xs-12 col-sm-6 col-offset-2">

        <div id="example-form">
           <div id="wizard">

          <h3>Name</h3>
            <section>
              <div class="legend">
                <legend>Account Information</legend>
              </div>

              <br>
              <br>



              <h3>1/5 - My name is Helpster.</h3>
              <h3>What's yours, hipster?</h3>

                <br>
              <br>

              <%= f.input :first_name, required: true, id: "signup", label: "", autocomplete: "off"  %>
          </section>


          <h3>Field</h3>
            <section>
              <div class="legend">
                <legend>Account Information</legend>
              </div>

              <br>
              <br>


              <br>

                <h3>2/5 - Your subject at the academic factory?</h3>
              <br>


              <br>
              <%= f.input :field, id: "signup", label: "What do you study ?" %>
            </section>


          <h3>Hobbies</h3>
            <section>
              <div class="legend">
                <legend>Account Information</legend>
              </div>

              <br>
              <br>


              <br>

              <br>
                <h3>3/5 - What are you into?</h3>

                <br>
              <br>
              <%= f.input :hobby, label: "What are your hobbies and activities you practice ?" %>
            </section>


          <h3>Email</h3>
            <section>
              <div class="legend">
                <legend>Account Information</legend>
              </div>
              <br>
              <br>


              <br>

              <br>
                <h3>4/5 - You've got email?</h3>

                <br>
              <br>
              <%= f.input :email, required: true, label: "What is your email ?" %>
            </section>

          <h3>Password</h3>
            <section>
              <div class="legend">
                <legend>Account Information</legend>
              </div>
              <br>
              <br>


              <br>

              <br>
                <h3>5/5 - Password! And the doors of help will open:</h3>

                <br>
              <br>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: "What is your password ?" %>
            </section>





  </div>
  </div>
<% end %>

</div>
</div>
</div>

<%= content_for :body_js do %>
  <script>
    var gevent;
    $("#wizard").steps({
      headerTag: "h3",
      bodyTag: "section",
      transitionEffect: "slideLeft",
      onFinishing: function (event, currentIndex) {
        $("#new_user").submit();
        return true;
      }
    });





  document.addEventListener('keypress', (event) => {
    const keyCode = 13;
    if (event.charCode == keyCode) {

      $( "a:contains('Next')").click();

      if ($(".actions>ul>li").hasClass('disabled')) {
          $( "a:contains('Finish')").click();
          console.log("here");
      }

    }

  });
  </script>
<% end %>



