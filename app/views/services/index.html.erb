<div class="container">
  <h1 class="text-center" id="service">Services</h1>
  <div class="row">
    <div class="col-md-12">
      <%= render "search_form" %>
    </div>
  </div>
  <div class="cards">
    <div class="row">
      <% @services.each do |service| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <%= link_to service_path(service) do %>
        <div class="service-card">
          <div class="card-img">
            <%= image_tag(service.photo_or_default, width: 200, height: 150, crop: :fill, class: "card-img") %>
          </div>
          <div class="card-category"><%= service.category.name %></div>
          <div class="card-description"><%= service.description.truncate_words(10) %></div>
          <div class="card-name"><%= service.name %></div>
          <div class="card-price"><%= service.helpies %> â‚¬</div>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>

