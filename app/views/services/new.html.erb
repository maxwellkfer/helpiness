<div class="container">
  <div class="col-sm-offset-2 col-sm-8">
    <h2>Post an offer!</h2>
    <br>
    <br>
    <div class="offer-form">
    <%= simple_form_for @service do |f| %>
      <%= f.input :name, label: "Offer name", maxlength: 15 %>

      <%= f.input :name, label: "Name of your service", maxlength: 15 %>

      <%= f.input :helpies, label: "How many helpies?" %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :description, label: "Tell me more..." %>
      <%= f.association :category, label: "Choose a category for your offer" %>

    </div>
      <div class="form-button">
      <%= f.submit "Post it!", class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>



